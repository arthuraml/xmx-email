# Application Settings
APP_NAME="XMX Email AI Backend"
APP_VERSION="1.0.0"
DEBUG=true
ENVIRONMENT=development

# API Configuration
API_HOST=0.0.0.0
API_PORT=8001
API_KEY=your-secure-api-key-here

# Google Gemini Configuration
GEMINI_API_KEY=your-gemini-api-key-here
GEMINI_MODEL=gemini-2.5-flash
GEMINI_TEMPERATURE=0.3
GEMINI_MAX_OUTPUT_TOKENS=1000

# Supabase Configuration
SUPABASE_URL=https://gtydmzumlicopgkddabh.supabase.co
SUPABASE_KEY=your-supabase-service-key-here

# Redis Configuration (for future async processing)
REDIS_URL=redis://localhost:6379
REDIS_DB=0

# CORS Settings
CORS_ORIGINS=["http://localhost:3000", "http://localhost:3001"]
CORS_ALLOW_CREDENTIALS=true

# Rate Limiting
RATE_LIMIT_REQUESTS=10
RATE_LIMIT_PERIOD=60  # seconds

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Processing Settings
MAX_CONCURRENT_REQUESTS=10
PROCESSING_TIMEOUT=30  # seconds
ENABLE_RESPONSE_CACHE=true
CACHE_TTL=300  # seconds

# Security
SECRET_KEY=your-secret-key-for-jwt-here
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Email Processing Defaults
DEFAULT_RESPONSE_LANGUAGE=pt-BR
DEFAULT_RESPONSE_TONE=professional
AUTO_RESPOND_ENABLED=false

# Monitoring (optional)
ENABLE_METRICS=true
METRICS_PORT=9090