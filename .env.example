# Google OAuth2 Credentials (if using OAuth2 instead of Service Account)
GOOGLE_CLIENT_ID=your_client_id_here
GOOGLE_CLIENT_SECRET=your_client_secret_here
GOOGLE_REDIRECT_URI=http://localhost:3001/auth/google/callback

# Service Account Configuration (recommended for Google Workspace)
# Path to your service account JSON key file
GOOGLE_SERVICE_ACCOUNT_KEY=./credentials/service-account-key.json

# Gmail Configuration
# The email address to access (must be in your Google Workspace domain)
GMAIL_USER_EMAIL=support@biofraga.com

# Backend Server Configuration
BACKEND_PORT=3001
BACKEND_URL=http://localhost:3001

# Frontend Configuration (for API calls)
# This should match your backend URL
NEXT_PUBLIC_API_URL=http://localhost:3001/api

# Supabase MCP Configuration
# Get these from your Supabase project settings
SUPABASE_PROJECT_REF=your_project_ref_here
SUPABASE_ACCESS_TOKEN=your_personal_access_token_here